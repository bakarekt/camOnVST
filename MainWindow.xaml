<Window x:Class="KTPM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTPM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="1" x:Name="TopMenu">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Home" Click="Home_Click" />
                <Button Content="About" Click="About_Click" />
                <Button Content="Contact" Click="Contact_Click" />
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" x:Name="MainContent">
            
        </Border>
    </Grid>
</Window>
